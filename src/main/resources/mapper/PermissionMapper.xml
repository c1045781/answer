<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.qiyoung.answer.mapper.PermissionMapper">
    <resultMap id="BaseResultMap" type="top.qiyoung.answer.model.Message">
        <id column="message_id" jdbcType="INTEGER" property="messageId"/>
        <result column="user_id" jdbcType="INTEGER" property="userId"/>
        <result column="status" jdbcType="INTEGER" property="status"/>
        <result column="content" jdbcType="VARCHAR" property="content"/>
        <result column="reason" jdbcType="VARCHAR" property="reason"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <select id="countMessageList" parameterType="top.qiyoung.answer.model.Query" resultType="java.lang.Integer">
        select count(*) from message where status = 0;
    </select>

    <select id="getMessageList" parameterType="top.qiyoung.answer.model.Query" resultMap="BaseResultMap">
        select * from message where status = 0
        <if test="order != null and order != ''">
            order by #{order}
        </if>
        <if test="index != null and size != null">
            limit #{index},#{size}
        </if>
    </select>

    <update id="updateStatus">
        update message
        <set>
            status = 1,
            <if test="reason != null and reason != ''">
                reason = #{reason}
            </if>
        </set>
        <where>
            <if test="id != null">
                message_id = #{id}
            </if>
        </where>
    </update>

    <select id="getMessageById" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        select * from message
        <where>
            <if test="id != null">
                message_id =#{id}
            </if>
        </where>
    </select>

    <select id="getMessageListByUserId" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        select * from message
        <where>
            <if test="userId != null">
                user_id = #{userId}
            </if>
        </where>
    </select>

    <insert id="add" parameterType="top.qiyoung.answer.model.Query">
        insert into message(content, status, user_id, create_time) values (#{content},#{status},#{userId},#{createTime})
    </insert>
</mapper>