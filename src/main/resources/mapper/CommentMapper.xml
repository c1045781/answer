<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.qiyoung.answer.mapper.CommentMapper">
    <resultMap id="BaseResultMap" type="top.qiyoung.answer.model.Comment">
        <id column="comment_id" jdbcType="INTEGER" property="id"/>
        <result column="user_id" jdbcType="INTEGER" property="userId"/>
        <result column="exercise_id" jdbcType="INTEGER" property="exerciseId"/>
        <result column="content" jdbcType="VARCHAR" property="content"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <select id="getCommentList" resultMap="BaseResultMap" parameterType="top.qiyoung.answer.model.Query">
        select * from comment
        <where>
            <if test="type != null and type != ''">
                <if test="type == 'user' and search != null and search != ''">
                  user_id = #{search}
                </if>
                <if test="type == 'exercise' and search != null and search != ''">
                  exercise_id = #{search}
                </if>
            </if>
        </where>
        <if test="order != null and order != ''">
            order by ${order}
        </if>
        <if test="index != null and size != null">
            limit #{index},#{size}
        </if>
    </select>

    <select id="countCommentList" parameterType="top.qiyoung.answer.model.Query" resultType="Integer">
        select count(*) from comment
        <where>
            <if test="type != null and type != ''">
                <if test="type == 'user' and search != null and search != ''">
                    user_id = #{search}
                </if>
                <if test="type == 'exercise' and search != null and search != ''">
                    exercise_id = #{search}
                </if>
            </if>
        </where>
    </select>

    <delete id="deleteByCommentId" parameterType="java.lang.Integer">
        delete from comment
        <where>
            <if test="commentId != null">
                comment_id = #{commentId}
            </if>
        </where>
    </delete>

    <select id="getCommentListByExerciseId" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        select * from comment
        <where>
            <if test="exerciseId != null">
                exercise_id = #{exerciseId}
            </if>
        </where>
    </select>

    <insert id="addComment" parameterType="top.qiyoung.answer.model.Comment">
        insert into comment(user_id, exercise_id, content, create_time) values (#{userId},#{exerciseId},#{content},#{createTime})
    </insert>
</mapper>