<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.qiyoung.answer.mapper.ExercisesMapper">
    <resultMap id="BaseResultMap" type="top.qiyoung.answer.model.Exercises">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="exercises_type" jdbcType="VARCHAR" property="exercisesType"/>
        <result column="subject_id" jdbcType="INTEGER" property="subjectId"/>
        <result column="correct" jdbcType="VARCHAR" property="correct"/>
        <result column="exercises_content_id" jdbcType="INTEGER" property="exercisesContentId"/>
        <result column="create_user_id" jdbcType="INTEGER" property="createUserId"/>
        <result column="status" jdbcType="INTEGER" property="status"/>
        <result column="create_time" property="createTime"/>
        <result column="modify_time" property="modifyTime"/>
    </resultMap>

    <insert id="insert" parameterType="top.qiyoung.answer.model.Exercises">
        insert into exercises (exercises_type, subject_id, correct, exercises_content_id, create_user_id, status, create_time, modify_time)
           values(#{exercisesType},#{subjectId},#{correct},#{exercisesContentId},#{createUserId},#{status},#{createTime},#{modifyTime})
    </insert>

    <select id="getExercisesList" parameterType="top.qiyoung.answer.model.Query" resultMap="BaseResultMap">
        select * from exercises
        <if test="order != null and order != ''">
            order by ${order} asc limit #{index},#{size}
        </if>
    </select>

    <select id="countExercisesList" parameterType="top.qiyoung.answer.model.Query" resultType="Integer">
        select count(*) from exercises
    </select>

    <select id="getExercisesById" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        select * from exercises where id = #{id}
    </select>

    <delete id="deleteById" parameterType="java.lang.Integer">
        delete from exercises
        <where>
            <if test="id != null">
                id = #{id}
            </if>
        </where>
    </delete>

    <update id="update" parameterType="top.qiyoung.answer.model.Exercises">
        update exercises
        <set>
            <if test="exercisesType != null and exercisesType != ''">
                exercises_type = #{exercisesType},
            </if>
            <if test="subjectId != null">
                subject_id = #{subjectId},
            </if>
            <if test="exercisesContentId != null">
                exercises_content_id = #{exercisesContentId},
            </if>
            <if test="modifyTime != null">
                modify_time = #{modifyTime},
            </if>
        </set>
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
        </where>
    </update>
</mapper>