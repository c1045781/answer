<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.qiyoung.answer.mapper.UserMapper">
    <resultMap id="BaseResultMap" type="top.qiyoung.answer.model.User">
        <id column="user_id" jdbcType="INTEGER" property="userId"/>
        <result column="role" jdbcType="INTEGER" property="role"/>
        <result column="account" jdbcType="VARCHAR" property="account"/>
        <result column="username" jdbcType="VARCHAR" property="username"/>
        <result column="password" jdbcType="VARCHAR" property="password"/>
        <result column="description" jdbcType="VARCHAR" property="description"/>
        <result column="avatar_img_url" jdbcType="VARCHAR" property="avatarImgUrl"/>
        <result column="phone" jdbcType="VARCHAR" property="phone"/>
        <result column="sex" jdbcType="VARCHAR" property="sex"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <select id="login" parameterType="top.qiyoung.answer.model.User" resultMap="BaseResultMap">
        select * from user
        <where>
            <if test="account !=null and account != ''">
                and account = #{account}
            </if>
            <if test="password !=null and password != ''">
                and password = #{password}
            </if>
        </where>
    </select>

    <select id="getUserById" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        select * from user
        <where>
            <if test="id != null">
                and user_id = #{id}
            </if>
        </where>
    </select>

    <select id="findUserByAccount" parameterType="java.lang.String" resultMap="BaseResultMap">
        select * from user
        <where>
            <if test="account !=null and account != ''">
                and account = #{account}
            </if>
        </where>
    </select>

    <select id="getUserList0" parameterType="top.qiyoung.answer.model.Query" resultMap="BaseResultMap">
        select * from user
        <where>
            role != 0
            <if test="search != null and search != ''">
                <if test="type != null and type != ''">
                    <if test="type == 'id'">
                        and user_id = #{search}
                    </if>
                    <if test="type == 'account'">
                        and account like "%"#{search}"%"
                    </if>
                    <if test="type == 'username'">
                        and username like "%"#{search}"%"
                    </if>
                </if>
            </if>
            <if test="role != null">
                and role = #{role}
            </if>
        </where>
        <if test="order != null and order != ''">
            order by ${order}
        </if>
        <if test="index != null and size != null">
            limit #{index},#{size}
        </if>
    </select>

